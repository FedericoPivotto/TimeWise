<resources>
    <!-- Base application theme -->
    <style name="Theme.TimeWise" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/theme_green</item>
        <item name="colorPrimaryVariant">@color/theme_category</item>
        <item name="colorOnPrimary">@color/theme_light</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/lime</item>
        <item name="colorSecondaryVariant">@color/theme_green</item>
        <item name="colorOnSecondary">@color/gray</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorTertiary">@color/gray</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Other theme customizations -->
        <item name="android:navigationBarColor">@color/theme_category</item>
    </style>

    <!-- App dialog theme -->
    <style name="DialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:backgroundTint">@color/theme_light</item>
    </style>

    <!-- Had to override the colorPrimary for the TextInputEditText as it uses the primaryColor of the
     cursor color -->
    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/gray_background</item>
        <item name="android:colorForegroundInverse">@color/black</item>
        <!-- Change buttons style -->
        <item name="android:buttonBarPositiveButtonStyle">
            @style/TimePickerDialogPositiveButtonStyle
        </item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/TimePickerDialogNegativeButtonStyle
        </item>
    </style>

    <!-- Text color for positive button -->
    <style name="TimePickerDialogPositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Text color for negative button -->
    <style name="TimePickerDialogNegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>