<resources>
    <!-- Base application theme -->
    <style name="Theme.TimeWise" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/theme_night_color5</item>
        <item name="colorPrimaryVariant">@color/theme_night_color1</item>
        <item name="colorOnPrimary">@color/theme_night_color2</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/lime</item>
        <item name="colorSecondaryVariant">@color/lime</item>
        <item name="colorOnSecondary">@color/theme_night_color1</item>
        <item name="colorOnTertiary">@color/theme_night_color1</item>
        <item name="colorTertiary">@color/theme_night_color7</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">#121212</item>
        <!-- Other theme customizations -->
        <item name="android:textColor">@color/lime</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorTertiary">@color/lime</item>
        <item name="android:navigationBarColor">@color/theme_night_color1</item>
    </style>

    <!-- App dialog theme -->
    <style name="DialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:backgroundTint">@color/theme_night_color7</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorPrimary">@color/lime</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/lime</item>
        <item name="android:colorPrimaryDark">@color/lime</item>
        <item name="android:background">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackgroundFloating">@color/black</item>
        <!-- Change buttons style -->
        <item name="android:buttonBarPositiveButtonStyle">
            @style/TimePickerDialogPositiveButtonStyle
        </item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/TimePickerDialogNegativeButtonStyle
        </item>
    </style>

    <!-- Text color for positive button -->
    <style name="TimePickerDialogPositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/lime</item>
    </style>

    <!-- Text color for negative button -->
    <style name="TimePickerDialogNegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/lime</item>
    </style>
</resources>